# sudo chmod 664
# sudo systemctl enable stratux_hud.service

[Unit]
Description=Heads Up Display

[Service]
ExecStart=/usr/bin/python /home/pi/src/stratux_hud/stratux_hud.py
ExecStop=/usr/bin/pkill stratux_hud
Group=pi
Restart=always
User=pi
WorkingDirectory=/home/pi/stratux_hud

[Install]
WantedBy=default.target